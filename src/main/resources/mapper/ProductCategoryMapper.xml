<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cityquest.mapper.ProductCategoryMapper">
    
    <resultMap id="CategoryResultMap" type="com.cityquest.entity.ProductCategory">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <select id="selectById" parameterType="Integer" resultMap="CategoryResultMap">
        SELECT * FROM product_category WHERE id = #{id}
    </select>
    
    <select id="selectAll" resultMap="CategoryResultMap">
        SELECT * FROM product_category
        <where>
            <if test="status != null">AND status = #{status}</if>
        </where>
        ORDER BY sort_order ASC, id ASC
    </select>
    
    <insert id="insert" parameterType="com.cityquest.entity.ProductCategory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product_category (name, description, sort_order, status, create_time, update_time)
        VALUES (#{name}, #{description}, #{sortOrder}, #{status}, #{createTime}, #{updateTime})
    </insert>
    
    <update id="update" parameterType="com.cityquest.entity.ProductCategory">
        UPDATE product_category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null">status = #{status},</if>
            update_time = #{updateTime}
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="delete" parameterType="Integer">
        DELETE FROM product_category WHERE id = #{id}
    </delete>
</mapper>

